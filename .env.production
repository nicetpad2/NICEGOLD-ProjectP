# Production Environment Configuration
DEBUG=false
ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql://nicegold:${POSTGRES_PASSWORD}@postgres:5432/nicegold
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
REDIS_MAX_CONNECTIONS=100

# Message Queue
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP=nicegold-trading

# Security
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RATE_LIMIT=100

# Trading Configuration
MAX_POSITION_SIZE=10000
MAX_DAILY_LOSS=5000
EMERGENCY_STOP_DRAWDOWN=0.15
RISK_PERCENTAGE=0.02

# ML Configuration
MODEL_RETRAIN_INTERVAL=24h
FEATURE_STORE_BACKEND=redis
MODEL_REGISTRY_BACKEND=mlflow

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
LOG_LEVEL=INFO
SENTRY_DSN=${SENTRY_DSN}

# Market Data
DATA_PROVIDER=mt5
DATA_SYMBOLS=XAUUSD
DATA_TIMEFRAMES=M1,M15,H1

# Backup
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Performance
CACHE_TTL=300
BATCH_SIZE=1000
MAX_MEMORY_USAGE=8GB
